
@{
    ViewBag.Title = "CategoryMovie";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<style>
    .container {
        padding-left: 20px;
        max-width: 900px;
    }

    .table thead th {
        vertical-align: middle;
    }

        .table thead th.text-center {
            text-align: center;
        }

    .table tbody td {
        vertical-align: middle;
    }

        .table tbody td.text-center {
            text-align: center;
        }

    .table tbody tr:hover {
        background-color: #e3f0ff;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-primary {
        box-shadow: 0 4px 8px rgb(0 123 255 / 0.3);
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #004aad;
            box-shadow: 0 6px 12px rgb(0 123 255 / 0.5);
        }

    .btn-group .btn {
        margin-right: 8px;
    }

    .btn-sm {
        font-weight: 600;
        padding: 0.25rem 0.6rem;
        font-size: 0.85rem;
    }

    .table-striped > tbody > tr:nth-of-type(odd) {
        background-color: #f9fbff;
    }

    a {
        text-decoration: none !important;
    }

    .modal-content {
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        animation: fadeInUp 0.3s ease;
    }

    .modal-header {
        background-color: #004aad;
        color: #fff;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .modal-title {
        font-weight: 600;
        font-size: 1.2rem;
    }

    .modal-body {
        background-color: #f8f9fa;
        padding-top: 20px;
        padding-bottom: 10px;
    }

    .modal-footer {
        background-color: #f1f1f1;
        border-bottom-left-radius: 15px;
        border-bottom-right-radius: 15px;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 5px;
    }

    .form-control,
    .selectpicker {
        border-radius: 10px;
        box-shadow: none;
        transition: border-color 0.2s;
    }

        .form-control:focus,
        .selectpicker:focus {
            border-color: #004aad;
            box-shadow: 0 0 0 0.2rem rgba(0, 74, 173, 0.25);
        }

    .form-check-label {
        margin-left: 10px;
    }

    .btn {
        border-radius: 8px;
        font-weight: 500;
    }

    .btn-primary {
        background-color: #004aad;
        border-color: #004aad;
    }

        .btn-primary:hover {
            background-color: #003a88;
            border-color: #003a88;
        }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .tapPhimItem input {
        border-radius: 6px;
    }

    #btnAddTapPhim {
        margin-top: 10px;
    }
</style>

<div class="container mt-4">
    <!-- Thông báo -->
    <div id="alertContainer" style="display: none;">
        <div id="alertMessage" class="alert alert-success alert-dismissible fade show" role="alert">
            <!-- Nội dung thông báo sẽ thay đổi bằng JavaScript -->
            <span id="alertText">Thành công!</span>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>
        </div>
    </div>
    <h2 class="mb-4">Quản lý thể loại phim</h2>

    <div class="row mb-3">
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bi bi-search"></i>
                </span>
                <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm theo tên phim...">
            </div>
        </div>
        <div class="col-md-6 text-end">
            <a href="#" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalAddCategoryMovie">
                <i class="bi bi-plus-circle"></i>
            </a>
        </div>
    </div>

    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th class="text-center" style="width: 80px;">Mã thể loại phim</th>
                <th style="width: auto;">Tên thể loại phim</th>
                <th class="text-center" style="width: 150px;">Trạng thái</th>
                <th class="text-center" style="width: 150px;">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="text-center">1</td>
                <td class="text-center">Kịch tính</td>
                <td class="text-center">Hiện</td>
                <td class="text-center">
                    <div class="btn-group" role="group" aria-label="Thao tác thể loại phim">
                        <a href="#" class="btn btn-sm btn-warning" title="Cập nhật thể loại phim" data-bs-toggle="modal" data-bs-target="#modalUpdateCategoryMovie">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a href="#" class="btn btn-sm btn-danger" title="Xóa thể loại phim" data-bs-toggle="modal" data-bs-target="#modalDeleteCategoryMovie">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
            <tr>
                <td class="text-center">1</td>
                <td class="text-center">Kịch tính</td>
                <td class="text-center">Hiện</td>
                <td class="text-center">
                    <div class="btn-group" role="group" aria-label="Thao tác thể loại phim">
                        <a href="#" class="btn btn-sm btn-warning" title="Cập nhật thể loại phim" data-bs-toggle="modal" data-bs-target="#modalUpdateCategoryMovie">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a href="#" class="btn btn-sm btn-danger" title="Xóa thể loại phim" data-bs-toggle="modal" data-bs-target="#modalDeleteCategoryMovie">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>

    <!-- Modal Thêm phim -->
    <div class="modal fade" id="modalAddCategoryMovie" tabindex="-1" aria-labelledby="modalAddCategoryMovieLabel" aria-hidden="true">
        <div class="modal-dialog modal-md modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm thể loại phim mới</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                <div class="modal-body px-3">
                    <form id="formAddCategoryMovie">
                        <div class="mb-3">
                            <label for="categoryName" class="form-label">Tên thể loại phim</label>
                            <input type="text" class="form-control" id="categoryName" placeholder="Nhập tên thể loại...">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Trạng thái</label>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="statusSwitch" />
                                <label class="form-check-label" for="statusSwitch">Bật để hiển thị thể loại</label>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="button" class="btn btn-primary">Lưu</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Cập nhật thể loại phim -->
    <div class="modal fade" id="modalUpdateCategoryMovie" tabindex="-1" aria-labelledby="modalUpdateCategoryMovieLabel" aria-hidden="true">
        <div class="modal-dialog modal-md modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Cập nhật thể loại phim</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                <div class="modal-body px-3">
                    <form id="formUpdateCategoryMovie">
                        <div class="mb-3">
                            <label for="updateCategoryId" class="form-label">Mã thể loại phim</label>
                            <input type="text" class="form-control" id="updateCategoryId">
                        </div>
                        <div class="mb-3">
                            <label for="updateCategoryName" class="form-label">Tên thể loại phim</label>
                            <input type="text" class="form-control" id="updateCategoryName" placeholder="Nhập tên thể loại...">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Trạng thái</label>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="updateStatusSwitch" />
                                <label class="form-check-label" for="updateStatusSwitch">Bật để hiển thị thể loại</label>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="button" class="btn btn-primary">Cập nhật</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Xóa thể loại phim -->
    <div class="modal fade" id="modalDeleteCategoryMovie" tabindex="-1" aria-labelledby="modalDeleteCategoryMovieLabel" aria-hidden="true">
        <div class="modal-dialog modal-md modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xác nhận xóa thể loại phim</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                <div class="modal-body text-center py-4">
                    <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 2rem;"></i>
                    <p class="mt-3 mb-1">Bạn có chắc chắn muốn xóa thể loại này không?</p>
                    <p class="fw-bold text-danger">Thao tác này không thể hoàn tác!</p>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="button" class="btn btn-danger">Xóa</button>
                </div>
            </div>
        </div>
    </div>


</div>

<script>
    function showAlert(message, type = 'success') {
        const alertContainer = document.getElementById('alertContainer');
        const alertMessage = document.getElementById('alertMessage');
        const alertText = document.getElementById('alertText');

        // Đặt nội dung thông báo
        alertText.textContent = message;

        // Gán class tương ứng với loại thông báo
        alertMessage.className = `alert alert-${type} alert-dismissible fade show`;

        // Hiển thị
        alertContainer.style.display = 'block';

        // Tự động ẩn sau 3 giây
        setTimeout(() => {
            alertContainer.style.display = 'none';
        }, 3000);
    }

</script>