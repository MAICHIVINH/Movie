    }

    .form-label {
        font-weight: 500;
        margin-bottom: 5px;
    }

    .form-control,
    .selectpicker {
        border-radius: 10px;
        box-shadow: none;
        transition: border-color 0.2s;
    }

    .form-control:focus,
    .selectpicker:focus {
        border-color: #004aad;
        box-shadow: 0 0 0 0.2rem rgba(0, 74, 173, 0.25);
    }

    .form-check-label {
        margin-left: 10px;
    }

    .btn {
        border-radius: 8px;
        font-weight: 500;
    }

    .btn-primary {
        background-color: #004aad;
        border-color: #004aad;
    }

    .btn-primary:hover {
        background-color: #003a88;
        border-color: #003a88;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-success:hover {
        background-color: #218838;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    /* Danh sách tập phim */
    .tapPhimItem input {
        border-radius: 6px;
    }

    /* Nút thêm tập phim */
    #btnAddTapPhim {
        margin-top: 10px;
    }
</style>

