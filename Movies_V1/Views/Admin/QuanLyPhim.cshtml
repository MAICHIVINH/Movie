    }

    .modal-title {
        font-weight: 600;
        font-size: 1.2rem;
    }

    .modal-body {
        background-color: #f8f9fa;
        padding-top: 20px;
        padding-bottom: 10px;
    }

    .modal-footer {
        background-color: #f1f1f1;
