
@{
    ViewBag.Title = "QuanLyPhim";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .container {
        padding-left: 20px;
        max-width: 900px;
    }

    /* Căn giữa header các cột có dữ liệu căn giữa, tên phim để trái */
    .table thead th {
        vertical-align: middle;
    }

        .table thead th.text-center {
            text-align: center;
        }

    /* Body các cột: mã phim, thể loại, năm sản xuất, thao tác căn giữa, tên phim để trái */
    .table tbody td {
        vertical-align: middle;
    }

        .table tbody td.text-center {
            text-align: center;
        }

    /* Màu nền hover nhẹ */
    .table tbody tr:hover {
        background-color: #e3f0ff;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    /* Nút thêm phim */
    .btn-primary {
        box-shadow: 0 4px 8px rgb(0 123 255 / 0.3);
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #004aad;
            box-shadow: 0 6px 12px rgb(0 123 255 / 0.5);
        }

    .btn-group .btn {
        margin-right: 8px;
    }

    /* Nút thao tác */
    .btn-sm {
        font-weight: 600;
        padding: 0.25rem 0.6rem;
        font-size: 0.85rem;
    }

    /* Màu nền dòng chẵn */
    .table-striped > tbody > tr:nth-of-type(odd) {
        background-color: #f9fbff;
    }

    a {
        text-decoration: none !important;
    }
</style>

