                <td class="text-center">
                    <div class="btn-group" role="group" aria-label="Thao tác phim">
                        <a href="#" class="btn btn-sm btn-warning" title="Cập nhật phim" data-bs-toggle="modal" data-bs-target="#modalSuaPhim">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a href="#" class="btn btn-sm btn-danger" title="Xóa phim" data-bs-toggle="modal" data-bs-target="#modalXoaPhim">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>

            <tr>
                <td class="text-center">1</td>
                <td>Phim boo</td>
                <td class="text-center">Kịch tính</td>
                <td class="text-center">2025</td>
                <td class="text-center">
                    <div class="btn-group" role="group" aria-label="Thao tác phim">
                        <a href="#" class="btn btn-sm btn-warning" title="Cập nhật phim" data-bs-toggle="modal" data-bs-target="#modalSuaPhim">
                            <i class="bi bi-pencil-square"></i>
